<div>
  <AssignUserForm
    @model={{this.model}}
    @closeModal={{this.closeModal}}
    @assign={{this.assign}}
  />
</div>

<div>
  <DButton
    class="btn-primary"
    @action={{this.assign}}
    @label={{if
      this.model.reassign
      "discourse_assign.reassign.title"
      "discourse_assign.assign_modal.assign"
    }}
  />
</div>